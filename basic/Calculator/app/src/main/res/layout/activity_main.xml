<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/top_ll"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/table_ll"
        app:layout_constraintVertical_weight="1"
        />
        <TextView
            android:id="@+id/expresstion_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:gravity="end"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/result_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textSize="20sp"
        android:textColor="@color/grey"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@id/table_ll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TableLayout
        android:id="@+id/table_ll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:shrinkColumns="*"
        android:paddingTop="21dp"
        android:paddingBottom="21dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        app:layout_constraintVertical_weight="1.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_ll"
        >
        <TableRow
            android:layout_weight="1"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/clear_btn"
                android:background="@drawable/button_background"
                android:text="C"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:onClick="clearButtonClicked"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="()"
                android:textColor="@color/green"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:enabled="false"
                android:clickable="false"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="%"
                android:textSize="25sp"
                android:textColor="@color/green"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="/"
                android:textSize="25sp"
                android:textColor="@color/green"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"
                />
        </TableRow>
        <TableRow
            android:layout_weight="1"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="7"
                android:textSize="25sp"
                android:textColor="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="8"
                android:textSize="25sp"
                android:textColor="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="9"
                android:textSize="25sp"
                android:textColor="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="X"
                android:textSize="25sp"
                android:textColor="@color/green"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"
                />
        </TableRow>
        <TableRow
            android:layout_weight="1"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="4"
                android:textSize="25sp"
                android:textColor="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"

                />
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="5"
                android:textSize="25sp"
                android:textColor="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="6"
                android:textSize="25sp"
                android:textColor="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="-"
                android:textSize="25sp"
                android:textColor="@color/green"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"
                />
        </TableRow>
        <TableRow
            android:layout_weight="1"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="1"
                android:textSize="25sp"
                android:textColor="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"

                />
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="2"
                android:textSize="25sp"
                android:textColor="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="3"
                android:textSize="25sp"
                android:textColor="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="+"
                android:textSize="25sp"
                android:textColor="@color/green"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"
                />
        </TableRow>
        <TableRow
            android:layout_weight="1"
            >
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/history_button"
                android:src="@drawable/ic_baseline_access_time_24"
                android:background="@drawable/button_background"
                android:textSize="25sp"
                android:textColor="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:onClick="historyButtonClicked"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="0"
                android:textSize="25sp"
                android:textColor="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="."
                android:textSize="25sp"
                android:textColor="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:enabled="false"
                android:clickable="false"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/result_button"
                android:background="@drawable/button_background_green"
                android:text="="
                android:textSize="25sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:onClick="resultButtonClicked"
                />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>